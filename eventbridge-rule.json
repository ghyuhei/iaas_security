{
  "Name": "SecurityHubFindingsRule",
  "EventPattern": {
    "source": ["aws.securityhub"],
    "detail-type": [
      "Security Hub Findings - Imported",
      "Security Hub Findings - Custom Action",
      "Security Hub Insight Results"
    ],
    "detail": {
      "findings": {
        "Severity": {
          "Label": ["HIGH", "CRITICAL"]
        },
        "Workflow": {
          "Status": ["NEW", "NOTIFIED"]
        }
      }
    }
  },
  "State": "ENABLED",
  "Description": "Capture SecurityHub findings for high and critical severity alerts"
}